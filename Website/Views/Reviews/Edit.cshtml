@model Website.Models.Review

<h2>Edit review</h2>
<form asp-action="Edit" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id"/>
    <input type="hidden" asp-for="GameId">
    <input type="hidden" asp-for="AuthorId">
    <div class="form-floating mb-2">
        <input asp-for="Title" class="form-control" placeholder=""/>
        <label asp-for="Title" class="control-label"></label>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-floating mb-2">
        <textarea asp-for="Body" class="form-control" placeholder="" style="height: 7rem"></textarea>
        <label asp-for="Body" class="control-label"></label>
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>
    <div class="mb-2 col-md-4">
        <label asp-for="Rating" class="control-label"></label>
        <input asp-for="Rating" class="form-control" max="10" min="1"/>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <a href="@ViewData["ReturnUrl"]" class="btn btn-secondary">Cancel</a>
        <input type="submit" value="Save and return" class="btn btn-primary"/>
    </div>
</form>