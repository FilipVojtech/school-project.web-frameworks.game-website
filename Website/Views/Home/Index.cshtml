@{
    ViewData["Title"] = "Home Page";
}

<div class="">
    <h1 class="text-center display-5">Latest Reviews</h1>
    <p class="text-center">List of user reviews</p>
    <div class="flex-column">
        @for (var i = 1; i <= 10; i++)
        {
            <div class="card w-100 mb-2" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Review title @i</h5>
                    <p class="card-text">Review text @i. Some quick example text to build on the card title and make up the bulk of the
                        card's content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        }
    </div>
</div>