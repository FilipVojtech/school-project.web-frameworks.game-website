@model Website.Models.ViewModels.HomeViewModel;
@{
    ViewData["Title"] = "Home Page";
}

<div class="">
    <h1 class="text-center display-5">Latest Reviews</h1>
    <p class="text-center">List of user reviews</p>
    <div class="flex-column">
        @if (Model.Reviews.Count > 0)
        {
            foreach (var review in Model.Reviews)
            {
                <partial name="Components/ReviewCard" model="review"/>
            }
        }
        else
        {
            <p>No Reviews</p>
        }
    </div>
</div>