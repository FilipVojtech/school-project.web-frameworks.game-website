@model Website.Models.ViewModels.HomeViewModel;
@{
    ViewData["Title"] = "Home Page";
}

<div class="">
    <h1 class="text-center display-5">Latest Reviews</h1>
    <p class="text-center">List of user reviews</p>
    <div class="flex-column">
        @if (Model.Reviews.Count > 0)
        {
            foreach (var review in Model.Reviews)
            {
                <div class="card w-100 mb-2" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">@review.Title</h5>
                        <p class="card-text">@review.Body</p>
                        <a asp-controller="Games" asp-action="ViewGame" asp-route-id="@review.Game.Id" class="btn btn-primary">@review.Game.Name</a>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No Reviews</p>
        }
    </div>
</div>